<h1>Editando usuário {{user.name}}</h1>
<form action="/users/edit" method="POST" class="form">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" placeholder="Digite o nome" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Profissão:</label>
        <input type="text" name="occupation" placeholder="Digite a profissão" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" checked>
        {{else}}
            <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promoções?</label>
    </div>
    <input type="submit" value="Editar">
</form>
<div class="address-container">
    <h2>Endereço:</h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="UserId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Digite a rua">
        </div>
         <div class="form-control">
            <label for="number">Número:</label>
            <input type="text" name="number" placeholder="Digite a número">
        </div>
        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" placeholder="Digite a cidade">
        </div>
        <input type="submit" value="Adicionar">
    </form>
    <div class="address-list">
        <h2>Lista de endereços</h2>
        {{#each user.Addresses}}
            <div>
                <p>{{street}}, {{number}} - {{city}}</p>
                <form action="/address/delete" method="post">
                    <input type="hidden" name="UserId" value="{{UserId}}">
                    <input type="hidden" name="id" value="{{id}}">
                    <input type="submit" value="Excluir">
                </form>
            </div>
        {{/each}}
    </div>
</div>