<h1>Todas as tasks</h1>
<ul class="task-list">
    {{#each tasks}}
    <li>
        {{#if this.done}}
            <span class="title done">{{this.title}}</span>
        {{else}}
            <span class="title">{{this.title}}</span>
        {{/if}}
        <div class="actions">
            <form action="/tasks/editStatus" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="bi bi-check2"></i>
                </button>
            </form>
            <a href="/tasks/edit/{{this.id}}">
                <i class="bi bi-pencil-square"></i>
            </a>
            <form action="/tasks/remove" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>
        </div>
    </li>
    {{/each}}
</ul>